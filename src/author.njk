---
layout: base
pagination:
  data: collections.authorsPaged
  size: 1
  alias: paged
permalink: "/authors/{{ paged.author.data.name | slug }}/{% if paged.number > 1 %}{{ paged.number }}/{% endif %}"
---
{% from "post-item.njk" import postItem %}
<div class="tag-page page container container--lg">
  <h1 class="tag-page__title">{{ paged.author.data.name }}</h1>
  <div>{{ paged.author.data.bio | markdown | safe }}</div>
  <ol class="post-list">
    {%- for post in paged.posts -%}
      <li class="post-list__item">
        {{ postItem(post, collections.authors) }}
      </li>
    {%- endfor -%}
  </ol>
  {% if (paged.first != true) or (paged.last != true) %}
    {% include "pagination.njk" %}
  {% endif %}
</div>
