---
renderData:
  title: Tagged with “{{ paged.tag }}”
layout: base
pagination:
  data: collections.tagsPaged
  size: 1
  alias: paged
permalink: "/posts/tag/{{ paged.tag | slug }}/{% if paged.number > 1 %}{{ paged.number }}/{% endif %}"
---
{% from "post-item.njk" import postItem %}
<div class="tag-page page container container--lg">
  <h1 class="tag-page__title">{{ paged.tag }}</h1>
  <ol class="post-list">
    {%- for post in paged.posts -%}
      <li class="post-list__item">
        {{ postItem(post, collections.authors) }}
      </li>
    {%- endfor -%}
  </ol>
  {% if (paged.first != true) or (paged.last != true) %}
    {% include "pagination.njk" %}
  {% endif %}
</div>
