---
renderData:
  title: Tagged with “{{ tag }} ”
layout: base
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /posts/tag/{{ tag | slug }}/
---
{% from "post-item.njk" import postItem %}
<div class="tag-page page container container--lg">
  <h1 class="tag-page__title">{{ tag }}</h1>
  <ol class="post-list">
    {% set list = collections[tag] | reverse %}
    {%- for post in list -%}
      <li class="post-list__item">
        {{ postItem(post) }}
      </li>
    {%- endfor -%}
  </ol>
</div>
