---
layout: 'base'
title: null
head: '<script src="https://identity.netlify.com/v1/netlify-identity-widget.js" defer></script><link rel="alternate" type="application/atom+xml"
  title="The WPT Blog"
  href="feed.xml" />'
footer: |
  <script>
    if (window.netlifyIdentity) {
      window.netlifyIdentity.on("init", user => {
        if (!user) {
          window.netlifyIdentity.on("login", () => {
            document.location.href = "/admin/";
          });
        }
      });
    }
  </script>
---
{% from "featured-post.njk" import featuredPost %}
{% from "post-item.njk" import postItem %}

<div class="page container container--lg">
  <ol class="post-list">
    {%- for post in collections.posts | limit(config.maxPostsPerPage) -%}
      {% if loop.index == 1 %}
        <li>
          {{ featuredPost(post) }}
        </li>
      {% else %}
        <li class="post-list__item">
          {{ postItem(post) }}
        </li>
      {% endif %}
    {%- endfor -%}
  </ol>
</div>
