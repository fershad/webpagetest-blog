---
layout: base
title: 'Authors'
---
<div class="page container container--lg">
  <h1 class="tag-page__title">Authors</h1>
  <ol class="author-list">
    {%- for author in collections.authors -%}
      <li class="author-list__item">
        <a class="author-list__link" href="/authors/{{ author.data.name | slug }}">
          {%- if author.data.image -%}
            {%- set loading = 'eager' -%}
            {%- if loop.index > 5 -%}
              {%- set loading = 'lazy' -%}
            {%- endif -%}
            {% cloudinaryImage author.data.image, "", 210,  210, "13.125rem", loading, "author-list__image" %}
          {%- endif -%}
          <p class="author-list__name">{{ author.data.name }}</p>
        </a>
      </li>
    {%- endfor -%}
  </ol>
</div>
