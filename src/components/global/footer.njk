{% from "site-logo.njk" import siteLogo %}

<footer class="footer" id="footer">
  <div class="container container--lg">
    <div class="footer__main">
      <nav class="footer__nav" aria-label="Footer">
        <a href="/">{{ siteLogo('footer__site-logo', 'var(--color-bg)') }}</a>
        <ul class="footer__links">
          {%- for item in footerNavigation.items -%}
            <li class="footer__nav-item">
              {%- set relExternal = '' -%}
              {%- set isCurrent = '' -%}
              {%- if item.external -%}
                {% set relExternal = ' rel="external" target="_blank"' %}
              {%- endif -%}
              {%- if page.url == item.url %}
                {% set isCurrent = ' aria-current="page"' %}
              {%- endif -%}
              <a class="footer__nav-link" href="{{ item.url }}"{{ relExternal | safe }}{{ isCurrent | safe }}>
                {{ item.text }}
              </a>
            </li>
          {%- endfor -%}
        </ul>
      </nav>
      <div class="footer-signup">
        <p class="footer-signup__text h3">
          {{ copy.footerSignup }}
        </p>
        <form class="footer-signup__form" data-signup data-netlify="true" name="signup">
          <label class="screenreader" for="footer-email">Email</label>
          <div class="footer-signup__input-group">
            <input id="footer-email" name="email" type="email" class="footer-signup__input" autocomplete="email" placeholder="Email Address" required>
            <button class="button button--accent">Subscribe</button>
          </div>
          <p data-hidden class="footer-signup__message" data-signup-message tabindex="-1" data-success="{{ copy.signupSuccess }}"></p>
        </form>
      </div>
    </div>
    <div class="footer__aside">
      <p class="footer__copyright">
        Â© {% copyrightYear %} Catchpoint Systems. All rights reserved.
      </p>
      <ul class="footer-social">
        <li class="footer-social__item">
          <a class="footer-social__link" href="{{ config.facebook }}" >
            <span class="screenreader">Facebook</span>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M18.77 7.46H14.5v-1.9c0-.9.6-1.1 1-1.1h3V.5h-4.33C10.24.5 9.5 3.44 9.5 5.32v2.15h-3v4h3v12h5v-12h3.85l.42-4z"/></svg>
          </a>
        </li>
        <li class="footer-social__item">
          <a class="footer-social__link" href="{{ config.twitter }}">
            <span class="screenreader">Twitter</span>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M23.44 4.83c-.8.37-1.5.38-2.22.02.93-.56.98-.96 1.32-2.02-.88.52-1.86.9-2.9 1.1-.82-.88-2-1.43-3.3-1.43-2.5 0-4.55 2.04-4.55 4.54 0 .36.03.7.1 1.04-3.77-.2-7.12-2-9.36-4.75-.4.67-.6 1.45-.6 2.3 0 1.56.8 2.95 2 3.77-.74-.03-1.44-.23-2.05-.57v.06c0 2.2 1.56 4.03 3.64 4.44-.67.2-1.37.2-2.06.08.58 1.8 2.26 3.12 4.25 3.16C5.78 18.1 3.37 18.74 1 18.46c2 1.3 4.4 2.04 6.97 2.04 8.35 0 12.92-6.92 12.92-12.93 0-.2 0-.4-.02-.6.9-.63 1.96-1.22 2.56-2.14z"/></svg>
          </a>
        </li>
      </ul>
    </div>
  </div>
</footer>
