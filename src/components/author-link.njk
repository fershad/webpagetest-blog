{%- macro authorLink(authorName, className) -%}
  {% set author = authorName | slug | findBySlug %}
  {% if author %}
    <a class="author {{ className }}" href="/authors/{{ author.data.page.fileSlug }}">
      <img class="author__image" width="40" height="40">
      <div class="author__text">
        {{ author.data.name }}
      </div>
    </a>
  {% endif %}
{%- endmacro -%}
